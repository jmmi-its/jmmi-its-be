generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id        String   @id @default(uuid())
  title     String
  weight    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  folders   Folder[]

  @@map("categories")
}

model Folder {
  id          String       @id @default(uuid())
  categoryId  String       @map("category_id")
  title       String
  weight      Int          @default(0)
  createdAt   DateTime     @default(now()) @map("created_at")
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  subheadings Subheading[]
  links       Link[]

  @@map("folders")
}

model Subheading {
  id        String   @id @default(uuid())
  folderId  String   @map("folder_id")
  title     String
  weight    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  folder    Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  links     Link[]

  @@map("subheadings")
}

model Link {
  id           String      @id @default(uuid())
  folderId     String?     @map("folder_id")
  subheadingId String?     @map("subheading_id")
  title        String
  url          String
  weight       Int         @default(0)
  createdAt    DateTime    @default(now()) @map("created_at")
  folder       Folder?     @relation(fields: [folderId], references: [id], onDelete: Cascade)
  subheading   Subheading? @relation(fields: [subheadingId], references: [id], onDelete: Cascade)

  @@map("links")
}

model StaffAnnouncement {
  id        String    @id @default(uuid())
  nrp       String    @unique
  name      String
  codename  String
  createdAt DateTime  @default(now()) @map("created_at")
  viewedAt  DateTime? @map("viewed_at")

  @@index([nrp])
  @@map("staff_announcements")
}
